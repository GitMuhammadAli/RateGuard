{
  "name": "rateguard",
  "version": "0.1.0",
  "private": true,
  "description": "API Rate Limiting Gateway",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"pnpm dev:server\" \"pnpm dev:client\"",
    "dev:server": "pnpm --filter @rateguard/server run start:dev",
    "dev:client": "pnpm --filter @rateguard/client run dev",
    "build": "pnpm --recursive run build",
    "build:server": "pnpm --filter @rateguard/server run build",
    "build:client": "pnpm --filter @rateguard/client run build",
    "docker:up": "docker compose -f docker/compose.yml up -d",
    "docker:down": "docker compose -f docker/compose.yml down",
    "docker:reset": "docker compose -f docker/compose.yml down -v",
    "docker:logs": "docker compose -f docker/compose.yml logs -f",
    "db:push": "pnpm --filter @rateguard/server run prisma:migrate",
    "db:generate": "pnpm --filter @rateguard/server run prisma:generate",
    "db:studio": "pnpm --filter @rateguard/server run prisma:studio",
    "clean": "pnpm --recursive exec -- rm -rf node_modules dist .next",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
